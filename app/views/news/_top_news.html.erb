<% if @top_articles.present? %>
  <div>
    <h1 class="text-2xl font-bold underline uppercase">
      PH Top Headlines
    </h1>
    <% @top_articles.each do |article| %>
      <div class='p-4'>
        <h1 class='text-lg font-bold tracking-wider'><%= article[:title] %></h1>
        <p><%= article[:description] %></p>
        <% if article[:url].present? %>
          <small class='italic hover:text-bold'>
            <%= link_to 'Read more', article[:url], target: '_blank'%>
          </small>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>