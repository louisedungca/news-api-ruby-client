<h1 class="text-3xl font-bold p-4 mb-3">
  News API
</h1>

<%= form_tag(news_index_path, method: "get") do %>
  <%= text_field_tag :query, params[:query], placeholder: "Enter search term", class: "rounded-md" %>
  <%= submit_tag "Search", class: 'font-semibold hover:bg-stone-400 py-2 px-4 bg-stone-300 rounded-md cursor-pointer' %>
<% end %>

<% if @articles.any? %>
<div>
  <p class="text-sm font-light p-4">
    Results for: "<%= @query %>"
  </p>

  <div class='divide-y-2 divide-slate-500/25 px-2'>    
    <% @articles.each do |article| %>
      <div class='p-4'>
        <h1 class='text-xl font-bold tracking-widest'><%= article[:title] %></h1>
        <p><%= article[:description] %></p>
        <% if article[:url].present? %>
          <small class='italic hover:underline hover:font-bold'>
            <%= link_to 'Read more', article[:url], target: '_blank'%>
          </small>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<% else %>
  <p>No articles available.</p>
<% end %>
