<div class="w-4/5 sm:w-1/5 h-auto absolute bottom-[2rem] right-[1rem] z-30 shadow-md">
  <% flash.each do |type, message| %>
    <% if type == "notice" %>
      <div class="text-green-500 mt-2 py-2 px-4 rounded-lg text-xs tracking-wider font-semibold border-2 border-green-500 bg-green-200 shadow-xl">
        <%= message %>
      </div>            
    <% else %>
      <div class="text-red-500 mt-2 py-2 px-4 rounded-lg text-xs tracking-wider font-semibold border-2 border-red-500 bg-red-200 shadow-xl">
        <%= message %>
      </div>
    <% end %>          
  <% end %>
</div>